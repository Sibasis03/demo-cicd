pipeline {

    agent any
    
    environment {
        DOCKER_IMAGE = "sibasis03/java-app:latest"
        DOCKER_REGISTRY_CREDENTIALS_ID = 'dockerhub-credentials'
    }
    
    stages {
        
        stage('checkout') {
            steps {
                git branch: 'main', url: 'ssh://git@gitlab.com:your-username/your-repo.git', credentialsId: 'gitlab-ssh-key'

            }
        }
        
        stage('build & test') {
            steps {
                script {
                    try {
                        sh 'mvn clean package'
                    } catch (Exception e) {
                        echo "Build and test failed: ${e.getMessage()}"
                        currentBuild.result = 'FAILURE'
                        error("Stopping pipeline due to build and test failure.")
                    }
                }
            }
        }
        
        stage('building docker image') {
            steps {
                sh 'docker build -t sibasis03/java-app:latest .'
            }
        }

        stage('pushing docker image') {
            steps {
              script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_REGISTRY_CREDENTIALS_ID) {
                        docker.image(DOCKER_IMAGE).push()
                    }
                }
            }
        }
        
        
    }
}
pipeline {
    agent any
    
    environment  {
        DOCKER_IMAGE =  "sibasis03/java-app:latest"
        
    }
    
    stages {
        
        stage('checkout') {
            steps {
                git 'https://github.com/Sibasis03/cicd-rproject.git'
            }
        }
        
        stage('build & test') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('running application') {
            steps {
                sh 'java -jar target/demo-0.0.1-SNAPSHOT.jar'
            }
        }
        
        
    }
}
pipeline {
    agent any
    
    environment  {
        DOCKER_IMAGE =  "sibasis03/java-app:latest"
        
    }
    
    stages {
        
        stage('checkout') {
            steps {
              echo 'passed'
            }
        }
        
        stage('build & test') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('building docker image') {
            steps {
                sh 'docker build -t sibasis03/java-app:latest .'
            }
        }
        
        
    }
}